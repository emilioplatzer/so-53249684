{
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib":["es2015", "dom"],
        "target": "es5",
        "module": "umd",
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
        "noFallthroughCasesInSwitch": true
    },
    "include":[
        "src"
    ]
}